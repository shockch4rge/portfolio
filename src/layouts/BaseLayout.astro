---
import "tailwind.css";
import Glow from "@assets/bg_glow.svg";
import NavBar from "@components/NavBar.astro";
import Footer from "@components/Footer.astro";
import { ClientRouter, fade } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Favian's Portfolio Website, Web Developer, Musician, Student" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>favi. | {title}</title>
		<script is:inline data-astro-rerun src="https://unpkg.com/@phosphor-icons/web@2.1.1"></script>
		<script
			is:inline
			data-astro-rerun
			src="https://kit.fontawesome.com/f69099e7e7.js"
			crossorigin="anonymous"></script>
		<ClientRouter />
	</head>
	<body class="w-screen m-0 flex flex-col bg-secondary scroll-smooth">
		<NavBar />
		<main>
			<slot transition:animate={fade({ duration: "0.4s" })} />
		</main>
		<Glow class="fixed -top-40 -left-24 select-none pointer-events-none z-0" />
		<Footer />
	</body>
</html>
