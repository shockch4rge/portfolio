---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a
	class="md:min-w-24 py-2 px-4 grid place-items-center text-primary text-xl font-body font-medium tracking-wide focus-within:text-secondary hover:text-secondary rounded-sm overflow-hidden transition relative"
	href={href}
>
	<slot />
</a>

<style>
	a::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: #ffe292;
		z-index: -1;
		transition: transform 0.2s;
		transform: scaleX(0);
		transform-origin: right;
		pointer-events: none;
	}

	a:hover::before {
		transform: scaleX(1);
		transform-origin: left;
	}

	a:focus-visible::before {
		transform: scaleX(1);
		transform-origin: left;
	}
</style>
