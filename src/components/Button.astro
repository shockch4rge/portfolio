<button
	class="px-4 py-2 text-primary hover:text-secondary active:scale-95 flex justify-center items-center transition-colors font-medium bg-gray-500/50 rounded-sm relative overflow-clip z-10"
>
	<slot />
	<slot name="icon" />
</button>

<style>
	button::before,
	button::after {
		content: "";
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
		transition: transform 0.2s;
	}

	button:hover::before {
		transform: translateX(100%);
	}

	button:hover::after {
		transform: translateX(-100%);
	}

	button::before {
		z-index: -1;
		left: -100%;
		@apply bg-primary;
	}

	button::after {
		z-index: -2;
		left: 100%;
		background: white;
	}
</style>
