---
interface Props {
	center?: boolean;
	className?: string;
	direction?: "row" | "col";
}

const { center = false, direction = "col", className } = Astro.props;
---

<div
	class:list={[
		"min-h-screen -mt-20 px-8 sm:px-32 lg:px-72 flex relative overflow-x-hidden",
		center ? "items-center justify-center" : "items-start justify-start",
		direction === "row" ? "flex-row" : "flex-col",
		className,
	]}
>
	<slot />
</div>
